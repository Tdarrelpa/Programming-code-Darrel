package Master;

/**
 *
 * @author asus
 */
public class Buku {
    String nama,pengarang;
    int jumlahhalaman;
    double hargabuku;
    boolean ketersediaanbuku;
private static double totalhargabuku=0.0;
private static int jumlahbuku=0;
    
    public Buku(){
        nama="tidak ada";pengarang="tidak ada";jumlahhalaman=0;hargabuku=0.0;ketersediaanbuku=true;
    }
    public Buku(String nm, String p, int jh, double hb, boolean kb){
        nama=nm;pengarang=p;jumlahhalaman=jh;hargabuku=hb;ketersediaanbuku=kb;totalhargabuku+=hb;jumlahbuku++;
    }

    public String getNama() {
        return nama;
    }

    public void setNama(String nama) {
        this.nama = nama;
    }

    public String getPengarang() {
        return pengarang;
    }

    public void setPengarang(String pengarang) {
        this.pengarang = pengarang;
    }

    public int getJumlahhalaman() {
        return jumlahhalaman;
    }

    public void setJumlahhalaman(int jumlahhalaman) {
        this.jumlahhalaman = jumlahhalaman;
    }

    public double getHargabuku() {
        return hargabuku;
    }

    public void setHargabuku(double hargabuku) {
        totalhargabuku-=this.hargabuku;
        this.hargabuku = hargabuku;
        totalhargabuku+=this.hargabuku;
    }

    public boolean isKetersediaanbuku() {
        return ketersediaanbuku;
    }

    public void setKetersediaanbuku(boolean ketersediaanbuku) {
        this.ketersediaanbuku = ketersediaanbuku;
    }
     public void lihatdata(){
         System.out.printf("%20s %20s %15d %15f %15.12b\n",nama,pengarang,jumlahhalaman,hargabuku,ketersediaanbuku);
     }
     
     public static double getRataratahargabuku(){
         if (jumlahbuku==0){
             return 0.0;
         }
         return totalhargabuku/jumlahbuku;
     }
     
     
     public static int getJumlahbuku(){
         return jumlahbuku;
     }
     
}
