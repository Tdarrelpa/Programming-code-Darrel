package Sub;

import Master.Buku;

/**
 *
 * @author asus
 */
public class Bukukomik extends Buku {
    private String GenreKomik;
    
    public Bukukomik(){
        super();GenreKomik="Tidak ada";
    }
    public Bukukomik(String nm, String p, int jh, double hb, boolean kb, String gk){
        super(nm,p,jh,hb,kb);GenreKomik=gk;
    }

    /**
     * @return the GenreKomik
     */
    public String getGenreKomik() {
        return GenreKomik;
    }

    /**
     * @param GenreKomik the GenreKomik to set
     */
    public void setGenreKomik(String GenreKomik) {
        this.GenreKomik = GenreKomik;
    }
    
    @Override
    public void lihatdata(){
        System.out.printf("%20s %20s %15d %15f %15.12b %35s\n",
                getNama(),getPengarang(),getJumlahhalaman(),getHargabuku(),isKetersediaanbuku(),GenreKomik);
    }
}
