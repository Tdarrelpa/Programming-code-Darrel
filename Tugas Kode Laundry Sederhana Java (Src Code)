    private void btnpilihancucianActionPerformed(java.awt.event.ActionEvent evt) {                                                 
    int selectedIndex = btnpilihancucian.getSelectedIndex();
    
    Object selectedObject = btnpilihancucian.getSelectedItem();
    
    if (btnpilihancucian.getSelectedItem().equals("--Pilih--")){ 
    txthargaperkilogram.setText("");    
    }
    else if (btnpilihancucian.getSelectedItem().equals("Cuci kering")){
    txthargaperkilogram.setText("2500");
    }
    else if (btnpilihancucian.getSelectedItem().equals("Cuci basah")){
    txthargaperkilogram.setText("4000");
    }
    else if (btnpilihancucian.getSelectedItem().equals("Cuci + setrika")){
    txthargaperkilogram.setText("5500");
    }
    }                                                

    private void btnprosesActionPerformed(java.awt.event.ActionEvent evt) {                                          
    int a, b, total;
    
     a = Integer.parseInt(txthargaperkilogram.getText());
     b = Integer.parseInt(txtberatcucian.getText());
     total = (a * b);
    txttotalharga.setText("RP" +"\n" + String.valueOf(total));
    }                                         

    private void btnbersihkanActionPerformed(java.awt.event.ActionEvent evt) {                                             
    txthargaperkilogram.setText("");
    txtberatcucian.setText("");
    txttotalharga.setText("");
    boolean selectedValue = btnpilihancucian.getSelectedItem().equals("--Pilih--");
    }                                            

    private void btnkeluarActionPerformed(java.awt.event.ActionEvent evt) {                                          
    dispose();
    }                                         

